-- [[ HANA HUB: XYARA FIXED ]]
local Players = game:GetService("Players")
local LocalPlayer = Players.LocalPlayer

-- LOCK ID OWNER
local REAL_OWNER_ID = 5691338246 
local IsOwner = (LocalPlayer.UserId == REAL_OWNER_ID)

-- FIX LOGIKA ROLE (BIAR GAK CRASH)
local UserRole = "Member"
local RoleColor = Color3.new(1, 1, 1)

if IsOwner then
    UserRole = "Owner: Xyara"
    RoleColor = Color3.fromRGB(255, 0, 150)
end

-- UI DIMULAI DI SINI
if game.CoreGui:FindFirstChild("HanaUltimate") then 
    game.CoreGui.HanaUltimate:Destroy() 
end

local ScreenGui = Instance.new("ScreenGui", game.CoreGui)
ScreenGui.Name = "HanaUltimate"

-- Tombol Buka/Tutup
local TogBtn = Instance.new("TextButton", ScreenGui)
TogBtn.Size = UDim2.new(0, 45, 0, 45)
TogBtn.Position = UDim2.new(0.02, 0, 0.45, 0)
TogBtn.Text = "H"
TogBtn.BackgroundColor3 = Color3.fromRGB(255, 0, 150)
Instance.new("UICorner", TogBtn).CornerRadius = UDim.new(1,0)

local Main = Instance.new("Frame", ScreenGui)
Main.Size = UDim2.new(0, 220, 0, 300)
Main.Position = UDim2.new(0.5, -110, 0.5, -150)
Main.BackgroundColor3 = Color3.new(0,0,0)
Main.Visible = false
Instance.new("UICorner", Main)

TogBtn.MouseButton1Click:Connect(function()
    Main.Visible = not Main.Visible
end)

-- Label Status
local Status = Instance.new("TextLabel", Main)
Status.Size = UDim2.new(1, 0, 0, 50)
Status.Text = UserRole
Status.TextColor3 = RoleColor
Status.TextSize = 20
Status.BackgroundTransparency = 1

print("Hana Hub Loaded!")
